<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.MapsActivity">

    <include
        layout="@layout/app_toolbar"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:id="@+id/toolbar"
        />

        <fragment
            android:id="@+id/map"
            android:layout_below="@+id/toolbar"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_above="@+id/info"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_alignParentBottom="true"
            android:padding="10dp"
            android:id="@+id/info"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/cityName"
                android:layout_alignParentTop="true"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="@dimen/xlargetext"
                android:text="City Name"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/weatherStatus"

                android:textColor="@color/black"

                android:layout_below="@+id/cityName"
                android:textSize="@dimen/largetext"
                android:text="staus"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/humadity"
                android:layout_marginTop="5dp"
                android:textColor="@color/black"
                android:layout_below="@+id/weatherStatus"
                android:textSize="@dimen/largetext"
                android:text="Humadity"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/wind"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/humadity"
                android:textColor="@color/black"
                android:textSize="@dimen/largetext"
                android:text="City Name"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/max"
                android:layout_marginTop="5dp"
                android:textColor="@color/black"
                android:layout_below="@+id/wind"
                android:textSize="@dimen/largetext"
                android:text="City Name"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/min"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/max"
                android:textColor="@color/black"
                android:textSize="@dimen/largetext"
                android:text="City Name"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:id="@+id/rightPanel"
                android:layout_below="@+id/cityName"
                android:layout_alignParentRight="true"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/currentTemp"

                    android:textColor="@color/black"
                    android:gravity="center"


                    android:textSize="30dp"
                    android:text="25C"/>
                <ImageView
                    android:layout_width="80dp"
                    android:layout_below="@+id/currentTemp"
                    android:src="@drawable/cloud"
                    android:scaleType="fitCenter"
                    android:layout_alignParentRight="true"
                    android:layout_height="60dp" />
            </LinearLayout>



        </RelativeLayout>



</RelativeLayout>